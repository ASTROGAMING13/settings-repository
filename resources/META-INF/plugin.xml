<idea-plugin version="2">
  <name>Idea Configuration Server</name>
  <id>org.jetbrains.plugins.ideaConfigurationServer</id>
  <description>Supports sharing settings between installations of IntelliJ Platform based products used by the same developer (or team) on different computers</description>
  <version>2.0</version>
  <idea-version since-build="132.397"/>
  <!--<vendor>JetBrains</vendor>-->

  <application-components>
    <component>
      <implementation-class>org.jetbrains.plugins.ideaConfigurationServer.IcsManager$IcsProjectLoadListener</implementation-class>
    </component>
  </application-components>

  <extensions defaultExtensionNs="com.intellij">
    <ApplicationLoadListener implementation="org.jetbrains.plugins.ideaConfigurationServer.IcsManager"/>
    <errorHandler implementation="com.intellij.diagnostic.ITNReporter"/>
  </extensions>

  <actions>
    <action id="Ics.Sync" class="org.jetbrains.plugins.ideaConfigurationServer.actions.SyncAction">
      <add-to-group group-id="VcsGroups"/>
    </action>
  </actions>
</idea-plugin>
